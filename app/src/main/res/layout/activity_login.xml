<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rich_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="130dp"
                    android:src="@drawable/logo"
                    android:layout_height="130dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:text="Gas Authority \nOf India Limited"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="150dp"
                    android:background="@drawable/box1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Authentication"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="60dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/box2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/montserratmedium"
                            android:text="Enter Credentials"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/montserratsemibold"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="05dp"
                            android:text="Email Id"/>
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawableLeft="@drawable/ic_baseline_email_24"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/search"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/montserratregular"
                            android:hint="Ex. 19dcs@charusat.edu.in"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="#888888" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/montserratsemibold"
                            android:textSize="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="05dp"
                            android:text="Password"/>
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/search"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/montserratregular"
                            android:hint="Ex. sae#@ksaSf"
                            android:padding="10dp"
                            android:drawableLeft="@drawable/ic_baseline_password_24"
                            android:textColor="@color/white"
                            android:textColorHint="#888888" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#3583E0"

                            android:fontFamily="@font/montserratsemibold"
                            android:textSize="15dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="40dp"
                            android:text="Forgot Password ?"/>

                    </LinearLayout>
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="Login"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/workers"
                android:layout_marginTop="-20dp"
                android:layout_height="300dp"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>